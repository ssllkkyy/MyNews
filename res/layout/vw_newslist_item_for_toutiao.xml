<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/newlist_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_item_bg" >

        <LinearLayout
            android:id="@+id/ll_newslist_item_bmp"
            android:layout_width="@dimen/defauleNewsListBmpWidth"
            android:layout_height="@dimen/defauleNewsListBmpHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5.0dip"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/new_default"
            android:gravity="center"
            android:padding="3.0dip"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_newslist_item_bmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/iv_newslist_item_titleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_toLeftOf="@+id/ll_newslist_item_bmp"
            android:singleLine="true"
            android:textColor="@color/news_item_text_color"
            android:textSize="@dimen/defauleNewsListTextSize" />

        <TextView
            android:id="@+id/iv_newslist_item_desText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_newslist_item_titleText"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="90.0dip"
            android:layout_marginTop="4.0dip"
            android:lineSpacingExtra="2.0dip"
            android:paddingBottom="3.0dip"
            android:singleLine="false"
            android:textColor="@color/news_item_text_color_read"
            android:textSize="12.0sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_newslist_item_subject_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_newslist_item_titleText"
            android:layout_marginRight="92.0dip"
            android:layout_marginTop="20.0dip"
            android:paddingBottom="5.0dip"
            android:src="@drawable/news_item_subject"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_newslist_item_video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_newslist_item_titleText"
            android:layout_marginRight="92.0dip"
            android:layout_marginTop="20.0dip"
            android:paddingBottom="5.0dip"
            android:src="@drawable/item_video_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_newslist_item_srcText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="92.0dip"
            android:paddingBottom="5.0dip"
            android:singleLine="true"
            android:textColor="@color/news_item_text_color_read"
            android:textSize="12.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/iv_newslist_item_discuss_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="92.0dip"
            android:paddingBottom="4.0dip"
            android:singleLine="true"
            android:text="@string/discuss_text_string"
            android:textColor="@color/news_item_text_color_read"
            android:textSize="10.0sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/iv_newslist_item_discuss_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="1.0dip"
            android:layout_toLeftOf="@+id/iv_newslist_item_discuss_text"
            android:paddingBottom="4.0dip"
            android:textColor="@color/news_item_text_color_read"
            android:textSize="10.0sp"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>